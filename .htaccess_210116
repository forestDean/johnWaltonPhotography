#.htaccess in root
#WurflCloud index.php in /2014 directory

#prevent directory index
Options -Indexes
DirectoryIndex index.php index.htm 

RewriteEngine On
##redirect www to no-www
#RewriteBase /
#RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
#RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

#redirect Facebook Scraper to /index.htm (note: /2013 directory)
#RewriteCond %{HTTP_USER_AGENT} ^.*facebookexternalhit.*$
#RewriteRule ^(.*)$ http://www.20pictures.com/2014/index.htm [L]

#301 redirect Short URL 
#Pricelist:
#RewriteRule ^pricelist(.*) http://20pictures.com/information/find.php?filename=photoshoot.php [R=302,L]
#RewriteRule ^escort(.*) http://20pictures.com/information/find.php?filename=escort_photoshoot.php [R=302,L]

#redirect Files Not Found to custom 403/404
ErrorDocument 403 /403.htm 
ErrorDocument 404 /404.htm

##redirect to /2015/index.php
##note this is a 301 Permanent Redirect best for SEO
RewriteCond %{HTTP_HOST} ^(www.)?johnwalton.photography$
RewriteRule ^(/)?$ 2015 [L]

##prevent loop
#does not exist as a file on the file system
RewriteCond %{REQUEST_FILENAME} !-f
#does not exist as a directory on the file system
RewriteCond %{REQUEST_FILENAME} !-d
#to hide /2015
#http://johnwalton.photography/mobile/ > http://johnwalton.photography/2015/mobile/ 
#http://johnwalton.photography/full/ > http://johnwalton.photography/2015/full/
#eg: (full/) > /2015/full/ - all in brackets is copied
RewriteRule ^(.*)$ /2015/$1 [L]