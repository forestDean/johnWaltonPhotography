#redirect Files Not Found to custom 403/404
#ErrorDocument 403 /403.htm 
#ErrorDocument 404 /404.htm
ErrorDocument 403 http://johnwalton.photography/current/ 
ErrorDocument 404 http://johnwalton.photography/current/

##redirect to /current/index.php
##note this is a 301 Permanent Redirect best for SEO
RewriteCond %{HTTP_HOST} ^(www.)?johnwalton.photography$
RewriteRule ^(/)?$ current [L]

##prevent loop
#does not exist as a file on the file system
RewriteCond %{REQUEST_FILENAME} !-f
#does not exist as a directory on the file system
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(/)?$ http://johnwalton.photography/current [L]

